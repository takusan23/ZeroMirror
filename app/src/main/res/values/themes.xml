<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZeroMirror" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- スプラッシュスクリーン -->
    <style name="Theme.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#ffb3b9</item>
        <!-- Android 12 以上はアニメーションする VectorDrawable を指定している -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/zeromirror_splash_screen_icon</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.ZeroMirror</item>
    </style>

</resources>